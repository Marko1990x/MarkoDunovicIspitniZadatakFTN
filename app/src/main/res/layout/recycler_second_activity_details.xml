<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        >
        <!--add scrollbars to recycler not here-->

        <ImageView
            android:id="@+id/imageView_SecondActivity"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/ic_hourglass"
            android:contentDescription="@string/secondAct_ImageDescription" />

        <TextView
            android:id="@+id/textView_second_date1"
            android:text="@string/initText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_SecondActivity"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            >

        </TextView>
        <TextView
            android:id="@+id/textView_second_date2"
            android:text="@string/initText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_second_date1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="4dp"
            ></TextView>

        <TextView
            android:id="@+id/textView_fullDescription"
            android:text="@string/initText"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/textView_second_date2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            >

        </TextView>


    </RelativeLayout>




</androidx.cardview.widget.CardView>